<!-- ejs :TO include header page -->
<%- include ("header.ejs"); -%> 

    <!-- Ejs file should be create in views folder-->
    <!-- //we use scriptlet tag(<% %>) to ignore control flow statement in html page -->

    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
    </div>


    <div class="box">

        <!-- loop over array to populate new data -->
        <% for( let index = 0; index < newListItem.length; index++ ) { %>
        <div class="item">
            <input type="checkbox">
            <p><%= newListItem[index] %> </p>
        </div>

        <% } %>

        <form class="item" action="/" method="post">

            <input type="text" name="newItem" placeholder="New Item" autocomplete="off" required>

            <button type="submit" name="list" value=<%= listTitle %>>+</button>
        </form>

    </div>

   <!-- ejs: TO include footer page -->
<%- include ("footer.ejs"); -%> 

